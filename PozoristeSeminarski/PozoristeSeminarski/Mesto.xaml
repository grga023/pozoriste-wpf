<Window x:Class="PozoristeSeminarski.Mesto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PozoristeSeminarski"
        mc:Ignorable="d"
        Title="Mesto" Height="337" Width="422"
        Background="CornflowerBlue"
        WindowStartupLocation ="CenterScreen">
    
    <Border Background="LightBlue" CornerRadius="20" Margin="10">
        <StackPanel>
            <Label Content="NAZIV MESTA" Foreground="Black" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Width="367" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,5,0,0"/>
            <TextBox Name="txtNaziv" Background="White" FontSize="18"/>
            <Label Content="PTT" Foreground="Black" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold" Width="367" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,5,0,0"/>
            <TextBox x:Name="txtPTT" Background="White" FontSize="18"/>
            <Button x:Name="btnDodaj" Content="Dodaj mesto" Margin="150 50" Click="btnDodaj_Click"/>
        </StackPanel>
    </Border>
</Window>
